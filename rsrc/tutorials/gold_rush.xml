<?xml version="1.0" standalone="yes"?>

<tutorial ident="gold_rush" board="Gold Rush" players="2" nuggets="0">
  <show_view name="player_status"/>

  <!-- start them off with a friendly welcome -->
  <text message="welcome" step="1"/>
  <wait event="text_clicked"/>

  <!-- show them their claim -->
  <center_on what="claim" id="0"/>
  <text message="claim_intro" step="1"/>
  <wait event="text_clicked"/>

  <!-- add a nugget to the board and show them that -->
  <add_piece what="unit" id="1001" type="frontier_town/gunslinger"
             location="18,18" owner="0"/>
  <add_piece what="bonus" id="1000" type="frontier_town/nugget"
             location="16,18"/>
  <center_on what="piece" id="1000"/>
  <text message="nugget_intro" step="1"/>
  <wait event="bonus_activated"/>

  <!-- tell them to drop the nugget in their claim -->
  <text message="got_nugget" step="2"/>
  <wait event="effect:bonuses/frontier_town/nugget/added"/>
  <text message="deposited_nugget" step="2"/>
  <wait event="text_clicked"/>

  <!-- tell them about nuggets appearing around the board -->
  <text message="lodes" step="3"/>
  <wait event="text_clicked"/>

  <!-- wrap up and end the tutorial -->
  <text message="done"/>
  <wait event="text_clicked"/>

</tutorial>
