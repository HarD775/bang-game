<?xml version="1.0" standalone="yes"?>

<tutorial ident="cattle_rustling" board="Cattle Rustling" players="2">
  <show_view name="player_status"/>

  <!-- start them off with a friendly welcome -->
  <text message="welcome" step="1"/>
  <wait event="text_clicked"/>

  <!-- add their bigshot to the board and explain bigshots -->
  <add_piece what="bigshot" id="1001" location="18,12" owner="0"/>
  <center_on what="piece" id="1001"/>
  <text message="bigshot_intro" step="1"/>
  <wait event="text_clicked"/>

  <!-- add a cow and explain those -->
  <add_piece what="unit" id="1002" type="cow" location="18,14" owner="-1"/>
  <center_on what="piece" id="1002"/>
  <text message="cattle_intro" step="2"/>
  <wait event="effect:extras/cow/branded"/>

  <!-- point out their score -->
  <text message="cattle_scoring" step="2"/>
  <wait event="text_clicked"/>

  <!-- explain that cattle can be rebranded -->
  <text message="cattle_rebranding" step="2"/>
  <add_piece what="unit" id="1003" type="frontier_town/cavalry"
             location="16,14" owner="1"/>
  <center_on what="piece" id="1003"/>
  <wait event="text_clicked"/>

  <!-- have the AI rebrand the cattle, have the player rebrand it back -->
  <center_on what="piece" id="1002"/>
  <move_unit id="1003" target="1002"/>
  <wait event="effect:extras/cow/branded"/>
  <text message="cattle_rerebranding" step="2"/>
  <wait event="effect:extras/cow/branded"/>

  <text message="timer" step="3"/>
  <show_view name="round_timer"/>
  <wait event="text_clicked"/>
  <text message="winner" step="3"/>
  <wait event="text_clicked"/>

  <!-- wrap up and end the tutorial -->
  <text message="done"/>
  <wait event="text_clicked"/>

</tutorial>
