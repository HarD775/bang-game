#!/bin/sh
#
# $Id$
#
# Gracefully reboots a Bang game server running on this machine.

NODE=$1
if [ -z "$NODE" ]; then
    echo "Usage: $0 nodename"
    exit 255
fi

PIDS=`ps auxww | grep BangServer | grep $NODE | grep -v grep | awk '{ print $2 }' | sort -n`
if [ ! -z "$PIDS" ]; then
    echo $PIDS | xargs kill -INT
fi
