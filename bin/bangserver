#!/bin/sh
#
# $Id$
#
# Command line launcher for the Bang! development server

ROOT=`dirname $0`/..
CLASS=com.threerings.bang.server.BangServer

# determine our host and node names
HOSTNAME=`hostname`
NODE="frontier_town"
if [ ! -z "$1" ]; then
    NODE=$1
    shift
fi

SARGS="-server -Djava.awt.headless=true"
SARGS="$SARGS -Dbang.home=$ROOT -Dhostname=$HOSTNAME -Dnode=$NODE"
SARGS="$SARGS -Dresource_dir=$ROOT/rsrc -Dno_unpack_resources=true"
$ROOT/bin/runjava -- $SARGS "$@" $CLASS
