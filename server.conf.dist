# Local configuration for this Bang installation.

# Java configuration
export JAVA_HOME=/usr/local/java

# Database server configuration
DBSERVER=localhost
DBUSER=bang
DBPASSWD=PASSWORD
DBPORT=3306

# General configurations
BANG_USER=bang
LOG_EMAIL=bang-logs@DOMAIN
LOGLEVEL=info

# The user as which we run Jetty
JETTY_USER=bang

# These is passed to the various JVMs
SERVER_MEMORY=384M
TOOL_MEMORY=384M

# Locate the mail program
MAIL=/usr/bin/mail
if [ ! -f $MAIL ]; then
    MAIL=/bin/mail
fi
