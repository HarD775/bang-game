<?xml version="1.0" standalone="yes"?>
<game>
  <!-- the string identifier for this game -->
  <ident>bang</ident>

  <!-- The controller and manager used for our game. -->
  <controller>com.threerings.bang.client.BangController</controller>
  <manager>com.threerings.bang.server.BangManager</manager>

  <!-- Herein we define how the game is matchmade and configured. -->
  <match type="table">
    <!-- Properties configure the match maker, in this case: table. -->
    <min_seats>2</min_seats>
    <max_seats>4</max_seats>
    <start_seats>2</start_seats>
  </match>

  <!-- Customziation parameters -->
  <params>
    <ai ident="aicount" maximum="3"/>
    <choice ident="aitype" choices="still,standard" start="still"/>
    <range ident="board_size" minimum="8" maximum="48" start="15"/>
    <range ident="density" minimum="1" maximum="10" start="8"/>
    <toggle ident="fog" start="false"/>
  </params>
</game>
