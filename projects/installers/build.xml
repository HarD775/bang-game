<!-- project build configuration -->
<project name="Bang Installers" default="devclient" basedir=".">

  <!-- load up our configuration information -->
  <property name="base.dir" value="${basedir}/../.."/>
  <property name="deploy.dir" value="dist"/>
  <property name="web.home" value="${base.dir}/${deploy.dir}/installer-pages"/>
  <property file="${base.dir}/dist/deployment.properties"/>
  <property file="${cert_dir}/certificate.properties"/>

  <target name="prepare">
    <copy todir="data" file="${base.dir}/projects/tools/lib/java/getdown-pro.jar"/>
    <mkdir dir="${deploy.dir}"/>
  </target>

  <!-- builds and installs the dev installers -->
  <target name="devclient" depends="prepare">
    <exec dir="${default_locale}" executable="makensis" failonerror="true">
      <arg line="-V2"/>
      <arg line="dev-installer.nsi"/>
    </exec>
    <ant target="devclient" dir="linux" antfile="build.xml" inheritAll="no"/>
    <copy todir="${web.home}/devclient/">
      <fileset dir="${deploy.dir}" includes="dev-install.exe"/>
      <fileset dir="${deploy.dir}" includes="dev-install.bin"/>
      <fileset dir="${default_locale}" includes="dev-install.dmg"/>
    </copy>
  </target>

  <!-- builds and installs the test installers -->
  <target name="tclient" depends="prepare">
    <exec dir="${default_locale}" executable="makensis" failonerror="true">
      <arg line="-V2"/>
      <arg line="test-installer.nsi"/>
    </exec>
    <ant target="tclient" dir="linux" antfile="build.xml" inheritAll="no"/>
    <copy todir="${web.home}/aclient/">
      <fileset dir="${deploy.dir}" includes="test-install.exe"/>
      <fileset dir="${deploy.dir}" includes="test-install.bin"/>
      <fileset dir="${default_locale}" includes="test-install.dmg"/>
    </copy>
  </target>

  <!-- builds and installs the production installers -->
  <target name="client" depends="prepare">
    <exec dir="${default_locale}" executable="makensis" failonerror="true">
      <arg line="-V2"/>
      <arg line="bang-installer.nsi"/>
    </exec>
    <ant target="client" dir="linux" antfile="build.xml" inheritAll="no"/>
    <copy todir="${web.home}/client/">
      <fileset dir="${deploy.dir}" includes="bang-install.exe"/>
      <fileset dir="${deploy.dir}" includes="bang-install.bin"/>
      <fileset dir="${default_locale}" includes="bang-install.dmg"/>
    </copy>
  </target>

  <!-- signs and install the Getdown applet jar file -->
  <target name="applet" depends="prepare">
    <copy todir="${web.home}/client/" file="data/getdown-pro.jar"/>
    <copy todir="${web.home}/client/" file="${default_locale}/background.png"/>
    <signjar keystore="${cert_dir}/lib/keystore.dat" alias="threerings"
             storepass="${sign.storepass}">
      <fileset dir="${web.home}/client" includes="getdown-pro.jar"/>
    </signjar>
  </target>

  <!-- clean out the project -->
  <target name="clean">
    <delete file="data/getdown-pro.jar"/>
    <delete dir="${deploy.dir}"/>
  </target>
</project>
